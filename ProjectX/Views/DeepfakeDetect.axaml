<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectX.Views.DeepfakeDetect"
        Title="DeepfakeDetect">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="24" Margin="0,0,0,20">Deepfake Detection</TextBlock>

            <!-- Upload Video -->
            <Button Content="Upload Video" Click="UploadVideo_Click"/>
            <TextBlock x:Name="VideoFileName" Margin="0,10,0,20" TextWrapping="Wrap" Text="Video file: None"/>

            <!-- Upload Image -->
            <Button Content="Upload Image" Click="UploadImage_Click"/>
            <TextBlock x:Name="ImageFileName" Margin="0,10,0,20" TextWrapping="Wrap" Text="Image file: None"/>

            <!-- Start Detection -->
            <Button Content="Start Detection" Click="StartDetection_Click" IsEnabled="True"/>

            <!-- Result Display -->
            <TextBlock x:Name="ResultText" Margin="0,20,0,0" FontSize="16" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>